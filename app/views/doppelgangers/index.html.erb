
<div>
  <%= "#{params[:query].blank? ? 'All' : params[:query].capitalize} in #{params[:city].capitalize}" %>
</div>
<div class="main-container">
<% if @doppelgangers.blank? %>
  <h3>No one matches your search</h3>
<% else %>
  <div class="cards">
    <% @doppelgangers.each do |doppelganger| %>

    <%= render 'shared/doppelgangercard', doppelganger: doppelganger %>

    <% end %>
  </div>
<% end %>
  <div id="map"
      style="height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
