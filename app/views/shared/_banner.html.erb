<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'homepage/torii.jpg', alt: 'illustration of torri Japanese gates' %>);">
  <div class="container banner-content">
  <div class="container d-flex inline-form">
    <div class="banner-form">
      <form action="/doppelgangers">
        <div class="form-row align-items-center">
          <div class="col-auto">
            <label class="sr-only" for="inlineFormInput">Name</label>
            <div class="input-group mb-2">
              <%= form_tag doppelgangers_path, method: :get do %>
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                  placeholder: "Celebrity name"
                %>
            </div>
          </div>
          <div class="col-auto">
            <label class="sr-only" for="inlineFormInputGroup">Location</label>
            <div class="input-group mb-2">
              <%= text_field_tag :city,
                params[:city],
                class: "form-control",
                placeholder: "City"
              %>
            </div>
          </div>
          <div class="col-auto">
            <%= submit_tag "Search", class: "btn btn-primary mb-2" %>
          <% end %>
          </div>
        </div>
      </form>
    </div>
      <h1 class="mt-4">FIND THE BEST DOPPELGANGERS IN TOWN!</h1>
      <p>Is that who I think it is?</p>
    </div>
  </div>
</div>
